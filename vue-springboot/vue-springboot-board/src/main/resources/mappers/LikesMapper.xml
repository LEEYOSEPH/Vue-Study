<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.vue.springboot.mapper.LikesMapper">

	<resultMap id="resultLikes" type="com.vue.springboot.domain.LikesDTO" >
		<result property="likes_no" column="likes_no" />
		<result property="board_no" column="board_no" />
		<result property="user_no" column="user_no" />
		<result property="likes_check" column="likes_check" />
	</resultMap>
	
	
	<insert id="insertLikes">
		INSERT INTO LIKES VALUES (
			likes_no
			,#{board_no}
			, #{user_no}
			,1
		)
	</insert>
	
	<update id="updateLikes">
		UPDATE LIKES
		SET likes_check = 0
		WHERE board_no = #{board_no}
		AND user_no = #{user_no}
	</update>
	
	<update id="updateLikesCheck">
		UPDATE LIKES
		SET likes_check = 1
		WHERE board_no = #{board_no}
		AND user_no = #{user_no}
	</update>
	
	<select id="likesCheck" resultMap="resultLikes">
		SELECT *
		FROM LIKES
		WHERE board_no = #{board_no}
		AND user_no = #{user_no}
	</select>
</mapper>